<Window x:Class="Inventor_2.Views.StockClerk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventor_2.Views"
        mc:Ignorable="d"
        Title="StockClerk" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="BorderThickness" Value="3"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <Style  TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="3"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="Height" Value="30"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Label FontFamily="Segoe UI" FontSize="25" FontWeight="UltraBold"  Content="User "></Label>
            <Label x:Name="labName" FontSize="25" FontWeight="UltraBold"></Label>
        </StackPanel>
        <TextBlock 
         Text="Stock" 
         TextAlignment="Center" 
         FontSize="25" FontWeight="Bold" 
         VerticalAlignment="Center" 
         Height="42" Foreground="Black" 
         Grid.Row="1" 
         Background="Gray" 
         Width="300" 
         HorizontalAlignment="Left" 
         Margin="10,0,0,0"></TextBlock>

        <DataGrid 
               Name="Stock"
               Margin="10"
               Grid.Row="2" 
               Grid.RowSpan="2"
               AutoGenerateColumns="False"
               RowBackground="Gray"
               AlternatingRowBackground="White"
               HeadersVisibility="All"
               IsReadOnly="True"
               GridLinesVisibility="Vertical"
               VerticalGridLinesBrush="Black"
               FontSize="14"
               FontWeight="Bold"
               BorderThickness="2"
               BorderBrush="Black"
               SelectionMode="Single">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Width="70"  Header="Proid" Binding="{Binding ProductID }" />
                <DataGridTextColumn Width="*"  Header="ProductName" Binding="{Binding Name }" />
                <DataGridTextColumn Width="*" Header="Price" Binding="{Binding Price }" />
                <DataGridTextColumn Width="*" Header="Quantity" Binding="{Binding Quantity }" />
                <DataGridTextColumn Width="*" Header="SupID" Binding="{Binding SupplierID }"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock 
                Text="Low Stock" 
                TextAlignment="Center" 
                FontSize="25" FontWeight="Bold" 
                VerticalAlignment="Center" 
                Height="42" Foreground="Black" 
                Grid.Row="1" 
                Background="Gray" 
                Width="300" 
                HorizontalAlignment="Left" 
                Margin="10,0,0,0">
                    
                </TextBlock>

            </StackPanel>

            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center"  Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                <TextBlock Text="ProId" VerticalAlignment="Center" Margin="20"></TextBlock>
                <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextAlignment="Center" x:Name="txtproid" Width="54" Height="50"></TextBox>
            </StackPanel>

            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center"  Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                <TextBlock Text="Quantity" VerticalAlignment="Center" Margin="20"></TextBlock>
                <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextAlignment="Center"  x:Name="txtquant" Width="54" Height="50"></TextBox>
            </StackPanel>
           


            <Button  Grid.Column="3" Click="btn_Shipping" Content="Shipping" Width="120" Height="50"></Button>
        </Grid>
        <DataGrid 
        Name="LowStock"
        Margin="10,10,10,0"
        Grid.Row="5" 
        Grid.RowSpan="2"
        AutoGenerateColumns="False"
        RowBackground="Gray"
        AlternatingRowBackground="White"
        HeadersVisibility="All"
        IsReadOnly="True"
        GridLinesVisibility="Vertical"
        VerticalGridLinesBrush="Black"
        FontSize="14"
        FontWeight="Bold"
        BorderThickness="2"
        BorderBrush="Black"
        SelectionMode="Single">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Width="70"  Header="Proid" Binding="{Binding ProductID }" />
                <DataGridTextColumn Width="*"  Header="ProductName" Binding="{Binding Name }" />
                <DataGridTextColumn Width="*" Header="Price" Binding="{Binding Price }" />
                <DataGridTextColumn Width="*" Header="Quantity" Binding="{Binding Quantity }" />
                <DataGridTextColumn Width="*" Header="SupID" Binding="{Binding SupplierID }"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Width ="120" Height="35" HorizontalAlignment="Right" Margin="20,0" Click="Logout" Content="Log out" Background="red" Foreground="White"/>

    </Grid>
</Window>
